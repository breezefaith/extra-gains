
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //string[] files = new string[] { "text1.txt", "text2.txt", "text3.txt", "text4.txt", "text5.txt", "text6.txt" };
