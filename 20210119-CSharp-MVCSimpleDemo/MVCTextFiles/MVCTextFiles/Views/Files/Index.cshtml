}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in ViewBag.FileList)
        {
            <tr>
                @* <td><a href="/files/display/@file.Substring(0, file.IndexOf(".txt"))">@file</a></td>*@
                <td><a href="@Url.Content("~/Files/display/" + file.Substring(0, file.IndexOf(".txt")))">@file</a></td>
            </tr>
        }
    </tbody>
</table>

